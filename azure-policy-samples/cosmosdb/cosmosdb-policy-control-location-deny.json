{
    "mode": "All",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.DocumentDB/databaseAccounts"
          },
          {
            "not": {
              "field": "Microsoft.DocumentDB/databaseAccounts/locations[*].locationName",
              "in": ["East US", "East US 2"]
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    },
    "parameters": {}
  }